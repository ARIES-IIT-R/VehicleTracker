<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jiteshyadav.vehicletracker.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="17dp"
        android:width="320dp"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/imageView"
        tools:layout_alignLeft="@+id/textView" />

    <TextView
        android:text="image of vehicle no plate( for authentication purposes)"
        android:textSize = "17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/editVehicleNo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Full Name"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/imageView"
        tools:layout_alignLeft="@+id/textView" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:layout_below="@+id/myButton"
        android:layout_alignParentEnd="true"
        android:id = "@+id/imageView"
        />

    <Button
        android:text="Capture Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myButton"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:onClick="launchCamera"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        />

    <Button
        android:text="next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="write"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="Please fill the required fields"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="17dp"
        android:width="320dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:id="@+id/editVehicleNo"
        android:layout_below="@+id/VehicleTextView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Vehicle No"
        android:textSize = "17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VehicleTextView"
        android:layout_marginLeft="10dp"
        tools:layout_alignLeft="@+id/textView"
        android:layout_below="@+id/editName"
        android:layout_alignStart="@+id/editName" />

</RelativeLayout>
